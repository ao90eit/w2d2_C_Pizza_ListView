<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.W2d2_C_SQLite_Pretty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GeneralPizzaFont">
        <item name="android:fontFamily">@font/lobster_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubtextFont" parent="DescriptionFont">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="PizzaPriceFont">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectedPizzaPriceFont" parent="PizzaPriceFont">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="AppTitle" parent="GeneralPizzaFont">
        <item name="android:textSize">32dp</item>
    </style>
</resources>